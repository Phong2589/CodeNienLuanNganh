<div class="mt-3 mb-3">
    <div class="mb-3" style="font-size: 25px; text-align: center;">Cập nhật thông tin</div>
    <form action="/customer/profileProcess" method="post">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-12"
                style="padding-left: 15px !important; padding-bottom: 0px !important">
                <input type="text" placeholder="Họ và tên" name="name" class="w-xl-98 w-lg-98 w-md-98 w-sm-98 w-xs-98" value="{{profile.name}}">
                <p></p>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-12"
                style="padding-left: 15px !important; padding-bottom: 0px !important">
                <input type="text" placeholder="Số điện thoại" name="phone" class="w-xl-98 w-lg-98 w-md-98 w-sm-98 w-xs-98" value="{{profile.phone}}">
                <p></p>
            </div>
        </div>


        <textarea name="address" rows="3" placeholder="Địa chỉ" class="w-100">{{profile.address}}</textarea>
        <p></p>
        <div class="d-flex justify-content-center">
            <div class="">
                <button type="reset" class="btn btn-secondary">Làm lại</button>
            </div>&nbsp;&nbsp;
            <div class="">
                <button class="btn btn-primary" type="submit">Cập nhật</button>

            </div>
        </div>
    </form>
</div>