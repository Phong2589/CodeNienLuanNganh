{{#if product}}

<div class="mt-3 mb-3">
    <div class="row mb-3">
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <img src="{{product.image}}" alt="" class="imageDetailProduct w-100">
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="nameDetailProduct">{{product.name}}</div>
            <div class="">{{product.description}}</div>
            <div class="">Số lượng: {{product.quantity}}</div>
            <div class="">Đã bán: {{product.sold}}</div>
            <table class="buyProduct w-100">
                <tr>
                    <td>
                        Điều chỉnh thông tin sản phẩm
                    </td>
                </tr>

                <tr>
                    <td style="display: block;">
                        <div class=""><span>Giá sản phẩm: </span><span class="number">{{product.cost}}</span></div>
                    </td>

                    <td style="display: block;" class="d-flex justify-content-center mb-1">
                        <div class=""><button class="btn btn-danger" onclick="btnDelete('{{product.slug}}')">Xóa</button></div>&nbsp;&nbsp;
                        <div class=""><a href="/admin/updateProduct/{{product.slug}}"><button class="btn btn-primary">Cập nhật</button></a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
{{else}}
<h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Sản phẩm không tồn tại!</h3>
{{/if}}

<script>

function btnDelete(slug){
        Swal.fire({
            title: 'Bạn có chắc muốn xóa sản phẩm?',
            text: "Hành động có thể tổn hại đến dữ liệu!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/deleteProduct/"+slug);
            }
        })
    }
</script>