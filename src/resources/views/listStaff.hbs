{{#if staffs}}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="d-none d-sm-block">STT</th>
            <th scope="col">Họ và tên</th>
            <th scope="col" class="d-none d-sm-block">Tên đăng nhập</th>
            <th scope="col" class="d-none d-sm-block">Giới tính</th>
            <th scope="col" class="d-none d-sm-block">Số điện thoại</th>
            <th scope="col" class="d-none d-sm-block">Địa chỉ</th>
            <th scope="col">Cập nhật</th>
            <th scope="col">Xóa</th>
        </tr>
    </thead>
    <tbody>
        {{#each staffs}}
        <tr>
            <th scope="row" class="d-none d-sm-block">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td class="d-none d-sm-block">{{this.user}}</td>
            <td class="d-none d-sm-block">{{this.gender}}</td>
            <td class="d-none d-sm-block">{{this.phone}}</td>
            <td class="d-none d-sm-block">{{this.address}}</td>
            <td>
                <a href="/admin/updateStaff/{{this.user}}"><button class="btn btn-primary">Cập nhật</button></a>
            </td>
            <td><button class="btn btn-danger" onclick="destroy('{{this.user}}')">Xóa</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không có nhân viên nào!</h3>
{{/if}}

<script>

    function destroy(slug) {
        Swal.fire({
            title: 'Bạm có chắc muốn xóa nhân viên này?',
            text: "Bạn không thể khôi phục nhân viên này nếu tiếp tục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
