<div class="mt-3 mb-3">

    <div class="d-flex justify-content-center">
        <img src="{{admin.image}}" alt="" class="w-50">
    </div>
    <div class="mt-3 w-50 mx-auto">
        <form action="/admin/changeAvatarAdminDB" method="post" onsubmit="return check()" enctype="multipart/form-data">
            <p>Chọn ảnh đại diện mới</p>
            <input type="file" class="form-control" id="image" name="image" placeholder="Ảnh sản phẩm">
            <p class="warning" id="warningImage"></p>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>

</div>

<script>
    function check(){
        var checked = true
        var imageCheck = document.getElementById('image').value;
        if(imageCheck == "") {
                document.getElementById("warningImage").innerHTML="Vui lòng chọn ảnh đại diện mới!";
                checked = false;
            }
        else    document.getElementById("warningImage").innerHTML="";
        return checked;
    }
</script>